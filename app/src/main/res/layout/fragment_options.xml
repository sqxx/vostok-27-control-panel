<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:scrollbars="none">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Настройка освещения -->
        <androidx.cardview.widget.CardView
            android:id="@+id/values_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/card_light_settings_title" />

                <open.sqxx.vostok27.ui.main.view.OptionTimeView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="Текущее время" />

                <open.sqxx.vostok27.ui.main.view.OptionTimeView
                    android:id="@+id/day_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="Время отключения" />

                <open.sqxx.vostok27.ui.main.view.OptionTimeView
                    android:id="@+id/night_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="Время включения" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>