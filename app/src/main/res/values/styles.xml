<resources>

    <!-- Common -->

    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase" />

    <!-- Splash screen-->

    <style name="AppTheme.SplashBase">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.SplashBase" />

    <!-- Dialogs -->

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
